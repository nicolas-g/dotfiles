client
remote {{ item.value.remote_server_ip }} {{ item.value.remote_server_port | default('1194') }} # You must use the IP and not the DNS address !!!
{# remote {{ lookup('community.general.passwordstore', 'dotfiles/openvpn_xspdev_ip') }} 1194       # Use the IP and not the DNS address !!! #}

proto udp
nobind

dev tun
resolv-retry infinite
persist-key
persist-tun
ping-restart 60
ping 10

verb 3
mute 20
mute-replay-warnings

tls-auth ta.key 1
cipher AES-256-CBC

ca ca.crt
cert {{ user }}.crt
key {{ user }}.key
